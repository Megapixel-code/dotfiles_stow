{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/master/doc/json_schema.json",

  "logo": {
    "source": "~/.config/fastfetch/logos/windows.txt",      // Built-in logo name or file path
    "type": "file",        // Logo type: auto, builtin, small, file, etc.
    "position": "left",
    "padding": {
      "top": 2,          // Top padding
      "bottom": 2,	 // Bottom padding
      "left": 2,         // Left padding
      "right": 3         // Right padding
    },
    "color": {             // Override logo colors
      "1":"red",
      "2":"green",
      "3": "blue",
      "4": "yellow",
    }
  },

  "display": {
    "separator": " > ",     // Separator between keys and values
    "color": {
      "title": "light_blue",     // Title color
      "keys": "light_yellow",    // Key color
    },
    "percent": {
      "type": 1,         // 1=number, 2=bar, 3=both, 9=colored number
    },
    "key": {
       "width": 27,
    },
    "constants": [
       "─────────────────────────", // {$1}
       "──────────────────────────────────────────────────────────────", // {$2}
       "╟─ ", // {$3}
       "╟─", // {$4}
       "╓─", // {$5}
       "╙─", // {$6}
       "─", // {$7} ╢
       "╖", // {$8}
       "╜", // {$9}
    ],
  },

  "modules": [
    {
      "type": "title",
      "format": "{#magenta}{$5}{$1} {user-name-colored}{at-symbol-colored}{host-name-colored} {#magenta}{$1}{$8}"
    },

    {
       "type": "os",
       "key": "{#magenta}{$3}{#light_yellow}OS",
    },
    {
       "type": "kernel",
       "key": "{#magenta}{$3}{#light_yellow}Kernel",
    },
    {
       "type": "packages",
       "key": "{#magenta}{$3}{#light_yellow}Packages",
    },
    //"de",
    {
      "type": "wm",
      "key": "{#magenta}{$3}{#light_yellow}Window Manager",
    },
    {
      "type": "custom",
      "key": "{#magenta}{$3}{#light_yellow}Display Manager",
      "format": "lidm",
    },
    {
       "type": "terminal",
       "key": "{#magenta}{$3}{#light_yellow}Terminal",
    },
    //"uptime",
    //"wmtheme",
    //"shell",

    {
       "type":"title",
       "format": "{#magenta}{$4}{$2}{$7}",
    },

    {
       "type": "host",
       "key": "{#magenta}{$3}{#light_yellow}Motherboard",
    },
    {
      "type": "cpu",
      "key": "{#magenta}{$3}{#light_yellow}CPU",
      "format": "{name}",
    },
    {
      "type": "gpu",
      "key": "{#magenta}{$3}{#light_yellow}GPU",
      "format": "{vendor} {name}",
    },
    {
       "type": "display",
       "key": "{#magenta}{$3}{#light_yellow}Display ({2})",
    },

    {
       "type":"title",
       "format": "{#magenta}{$4}{$2}{$7}",
    },

    {
      "type":"disk",
      "key": "{#magenta}{$3}{#light_yellow}Disk",
    },
    {
       "type": "memory",
       "key": "{#magenta}{$3}{#light_yellow}Memory",
    },
    {
       "type": "swap",
       "key": "{#magenta}{$3}{#light_yellow}Swap",
    },

    {
       "type":"title",
       "format": "{#magenta}{$6}{$2}{$9}",
    },

    "colors"
    //"locale",
    //"break"
    //"theme",
    //"font",
    //"icons",
    //"cursor",
    //"terminalfont",
    //"localip",
    //"poweradapter",
  ]
}
